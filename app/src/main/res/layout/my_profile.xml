<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <!-- everything you already have -->
        <LinearLayout
            android:id="@+id/linearLayout12"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_gravity="left"
            android:background="#ffffff"
            android:visibility="gone"
            >

            <TextView
                android:id="@+id/txtView1"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:text="Q"
                android:textAlignment="center"
                android:textColor="#feb81c"
                android:textSize="50dp"
                android:textStyle="bold"

                />



        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout11"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:background="#86bd00"

            >

            <TextView
                android:id="@+id/txtView6"
                android:layout_width="118dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:text=""
                android:textColor="#000000"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="ข้อมูลผู้ใช้งาน"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>









        <ImageView
            android:id="@+id/picture"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:visibility="gone"

            />

        <EditText
            android:id="@+id/tMemberID"
            android:layout_width="277dp"
            android:layout_height="39dp"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:text="tMemberID"
            android:textColor="#000000"
            />




        <LinearLayout
            android:layout_width="331dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:visibility="gone"
            >

            <TextView
                android:layout_width="69dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:text="email:"
                android:textColor="#000000"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/tEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="15"
                android:hint="tEmail"
                android:textColor="#000000"

                android:textSize="15dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="331dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:visibility="gone"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:text="รหัสผ่าน:"
                android:textColor="#000000"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/tPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="15"
                android:hint="รหัสผ่าน"
                android:textColor="#000000"

                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="331dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="1dp">

            <TextView
                android:layout_width="69dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:text="name:"
                android:textColor="#000000"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/tName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="15"
                android:hint="name"
                android:textColor="#000000"

                android:textSize="15dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="331dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:visibility="gone"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:text="เบอร์โทร:"
                android:textColor="#000000"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/tTel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="15"
                android:hint="เบอร์โทร"
                android:textColor="#000000"
                android:textSize="15dp" />
        </LinearLayout>







        <EditText
            android:id="@+id/txtPicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="2px"
            android:text="txtPicture"
            android:textColor="#0000CC"
            android:visibility="gone"/>

        <Button
            android:id="@+id/Logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="#86bd00"
            android:ems="15"
            android:text="ออกจากระบบ"
            android:textSize="15dp"
            android:visibility="gone"
            />


        <Button
            android:id="@+id/b_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="#86bd00"
            android:ems="15"
            android:text="ออกจากระบบ"
            android:textSize="15dp" />

        <Button
            android:id="@+id/b_action1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="#86bd00"
            android:ems="15"
            android:text="แก้ไข"
            android:textSize="15dp"
            android:visibility="gone"
            />

        <Button
            android:id="@+id/b_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="#86bd00"
            android:ems="15"
            android:text="back menu"
            android:textSize="15dp"
            android:visibility="gone"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:visibility="gone"
            >

            <Button

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#86bd00"
                android:text="back menu" />






            <Button

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#86bd00"
                android:text="แก้ไข" />



        </LinearLayout>


    </LinearLayout>

</ScrollView>

